<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wave_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextClock
        android:id="@+id/date"
        style="@style/ClockElement"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:fontFamily="sans-serif-regular"
        android:format12Hour="EE, MMM d"
        android:format24Hour="EE, MMM d"
        android:lines="1"
        android:textAllCaps="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tag_line"
        style="@style/TagLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:fontFamily="sans-serif-regular"
        android:singleLine="true"
        android:text="@string/never_better"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag_line"
        android:layout_marginStart="5dp">

        <TextClock
            android:id="@+id/clock_hour"
            style="@style/ClockElement"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:format12Hour="hh"
            android:format24Hour="HH"
            android:textSize="43sp" />

        <ImageView
            android:id="@+id/colon"
            android:layout_width="15dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/clock_hour"
            android:contentDescription="@string/colon_desc"
            android:src="@drawable/colon" />

        <TextClock
            android:id="@+id/clock_minute"
            style="@style/ClockElement"
            android:layout_toEndOf="@+id/colon"
            android:format12Hour="mm"
            android:format24Hour="mm"
            android:textSize="43sp" />
    </RelativeLayout>
</RelativeLayout>
